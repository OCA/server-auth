<odoo>

    <record model="ir.ui.view" id="res_users_form_view">
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form" />
        <field name="arch" type="xml">
            <page name="access_rights" position="after">
                <page name="verification">
                    <group>
                        <field name="auth_verification_code_ids" />
                        <field name="verification_state" />
                    </group>
                </page>
            </page>
        </field>
    </record>

</odoo>
