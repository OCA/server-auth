    <record id="ldap_group_mapping_view_tree" model="ir.ui.view">
        <field name="name">ldap.group.mapping.view.tree</field>
        <field name="model">ldap.group.mapping</field>
        <field name="arch" type="xml">
            <tree string="LDAP Group Mapping">
                <field name="regexp"/>
                <field name="group_ids"/>
            </tree>
        </field>
    </record>

    <record id="ldap_group_mapping_view_form" model="ir.ui.view">
        <field name="name">ldap.group.mapping.view.form</field>
        <field name="model">ldap.group.mapping</field>
        <field name="arch" type="xml">
            <form string="LDAP Group Mapping">
                <group>
                    <field name="regexp"/>
                </group>
                <group colspan="2">
                    <field name="group_ids" nolabel="1"/>
                </group>
            </form>
        </field>
    </record>

 </odoo>
