<odoo>

    <record id="res_company_ldap_user_form_view" model="ir.ui.view">
        <field name="name">res.company.ldap.user.form</field>
        <field name="model">res.company.ldap.user</field>
        <field name="arch" type="xml">
            <form>
                <field name="company_ldap_id" invisible="1"/>
                <field name="login"/>
                <field name="email"/>
                <field name="name"/>
                <field name="unique_identifier"/>
                <field name="dn"/>
            </form>
        </field>
    </record>

    <record id="res_company_ldap_user_tree_view" model="ir.ui.view">
        <field name="name">res.company.ldap.user.tree</field>
        <field name="model">res.company.ldap.user</field>
        <field name="arch" type="xml">
            <tree>
                <field name="company_ldap_id" invisible="1"/>
                <field name="login"/>
                <field name="email"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

</odoo>
