<odoo>
    <template id="otp_login" name="Admin Passkey Login Page">
        <t t-call="web.login_layout">
            <form class="oe_login_form" role="form" t-attf-action="/auth_admin_passkey/login" method="post" onsubmit="this.action = this.action + location.hash">
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                <input type="hidden" name="redirect" t-att-value="redirect"/>
                <div class="form-group field-login">
                    <label for="confirmation_code" class="control-label">Admin Passkey Confirmation Code</label>
                    <input type="text" name="confirmation_code" id="confirmation_code" class="form-control" required="required" autofocus="autofocus" autocapitalize="off"/>
                </div>
                <p class="alert alert-danger" t-if="error">
                    <t t-esc="error"/>
                </p>
                <div class="clearfix oe_login_buttons">
                    <button type="submit" class="btn btn-primary">Confirm</button>
                </div>
            </form>
        </t>
    </template>
</odoo>
