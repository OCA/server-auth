<?xml version="1.0" encoding="UTF-8"?>
<odoo noupdate="1">
    <record id="rule_auth_sms_code_all" model="ir.rule">
        <field name="name">Restrict users to own SMS codes</field>
        <field name="model_id" ref="model_auth_sms_code" />
        <field name="domain_force">[('user_id', '=', user.id)]</field>
    </record>
    <record id="rule_auth_sms_code_system" model="ir.rule">
        <field name="name">Lift restrictions to SMS codes</field>
        <field name="groups" eval="[(4, ref('base.group_system'))]" />
        <field name="model_id" ref="model_auth_sms_code" />
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>
</odoo>
